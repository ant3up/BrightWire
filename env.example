# GitHub Configuration
# Personal Access Token with 'repo' scope
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub repository details
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo-name
GITHUB_BASE_BRANCH=main

# Vercel Configuration
# Personal Token from Vercel dashboard
VERCEL_TOKEN=your_vercel_token_here

# Vercel project ID (found in project settings)
VERCEL_PROJECT_ID=your_project_id

# Optional: Vercel team ID (if project belongs to a team)
VERCEL_TEAM_ID=your_team_id

# Site Configuration
# Base URL for the site (used as fallback for preview URLs)
SITE_BASE_URL=https://your-site.vercel.app

# JSON array of file paths to update with business data
# These files should contain placeholders: {{BUSINESS_NAME}}, {{PHONE}}, {{ADDRESS}}, {{SUBURB}}
# Note: {{SUBURB}} will use the address field if no suburb column exists
SITE_FILE_PATHS=["public/site-config.json","src/config/site.json","src/config/constants.ts"]

# Data Source Configuration
# Set to 'true' to use Google Sheets instead of Excel files
USE_GOOGLE_SHEETS=false

# Excel/CSV Configuration (when USE_GOOGLE_SHEETS=false)
# Path to the Excel file containing business data
SHEET_PATH=clients.xlsx

# Google Sheets Configuration (when USE_GOOGLE_SHEETS=true)
# Google Sheets ID (from the URL: https://docs.google.com/spreadsheets/d/SHEET_ID/edit)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Service Account credentials
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Sheets worksheet name (default: Sheet1)
GOOGLE_WORKSHEET_NAME=Sheet1

# Script Configuration
# Set to 'true' to run without making actual changes (testing mode)
DRY_RUN=false

# Cleanup Configuration
# Maximum age in days for preview branches before cleanup
MAX_AGE_DAYS=30

# Optional: Custom branch prefix (default: 'preview/')
BRANCH_PREFIX=preview/

# Optional: Custom deployment timeout in milliseconds (default: 180000 = 3 minutes)
DEPLOYMENT_TIMEOUT_MS=180000

# Optional: Custom polling interval in milliseconds (default: 4000 = 4 seconds)
POLL_INTERVAL_MS=4000
